{
  "name": "elciess.ms.users",
  "version": "1.0.0",
  "description": "API to register users to be used in any Elciess services.",
  "author": "Lucas Gon√ßalves",
  "repository": "https://github.com/lucasfloripa/elciess.ms.users",
  "scripts": {
    "start:dev": "NODE_ENV=dev nodemon --watch './**/*.ts' --exec 'ts-node' ./src/main/server.ts",
    "start:prod": "NODE_ENV=prod node dist/main/server.js",
    "docker:up": "rimraf data && npm run build && docker-compose up",
    "docker:down": "docker-compose down",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:watch": "jest --watchAll",
    "test:unit": "npm test -- --watchAll -c jest-unit.config.js",
    "test:e2e": "npm test -- --watch -c jest-e2e.config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@types/validator": "^13.7.14",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "commitlint": "^17.4.2",
    "eslint": "^8.31.0",
    "eslint-config-standard-with-typescript": "^27.0.1",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.22",
    "rimraf": "^4.0.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint 'src/**' --fix",
      "npm run test:unit",
      "git add"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.10.0",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "winston": "^3.8.2"
  }
}
